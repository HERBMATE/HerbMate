<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_herbBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HerbMate ChatBot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_herbBot"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_herbmate"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_herbBot"/>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/rounded_card"
        android:backgroundTint="@color/green"
        android:padding="10dp"
        android:text="Ini Chat"
        app:layout_constraintBottom_toBottomOf="@+id/iv_herbBot"
        app:layout_constraintStart_toEndOf="@id/iv_herbBot"
        app:layout_constraintTop_toTopOf="@+id/iv_herbBot" />


</androidx.constraintlayout.widget.ConstraintLayout>