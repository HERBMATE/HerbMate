<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/primaryColor"
    card_view:cardCornerRadius="25dp"
    android:layout_margin="8dp"
    android:layout_marginBottom="16dp">

    <!-- Menggunakan LinearLayout untuk memusatkan TextView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TextView untuk menampilkan nama penyakit -->
        <TextView
            android:id="@+id/tv_penyakit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penyakit"
            android:textSize="12sp"
            android:padding="16dp"
            android:textColor="@android:color/black"
            android:drawableEnd="@drawable/ic_dropdown_black" />

        <!-- Bagian Resep yang akan ditampilkan saat dropdown -->
        <LinearLayout
            android:id="@+id/llResep"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@android:color/white"
            android:padding="8dp">
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
