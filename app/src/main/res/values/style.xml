<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActiveTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="InactiveTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:paddingTop">4dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="CustomChipShape" parent="Widget.MaterialComponents.Chip.Action">
        <item name="shapeAppearanceOverlay">@style/CustomShapeStyle</item>
    </style>

    <style name="CustomShapeStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item> <!-- Bentuk sudut -->
        <item name="cornerSize">25%</item> <!-- Membuat chip berbentuk elips -->
    </style>

    <style name="SearchViewTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/searchBarColor</item>
        <item name="android:textColorHint">@color/blackAndWhiteColor</item>
    </style>

    <style name="ErrorTextStyle">
        <item name="android:padding">0dp</item> <!-- Pastikan tidak ada padding -->
        <item name="android:textColor">@android:color/black</item> <!-- Ganti dengan warna yang sesuai -->
        <item name="android:layout_marginStart">0dp</item> <!-- Pastikan tidak ada margin di kiri -->
    </style>

    <style name="CustomShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>