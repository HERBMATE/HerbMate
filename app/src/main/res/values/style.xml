<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActiveTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="InactiveTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:paddingTop">4dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="CustomChipShape" parent="Widget.MaterialComponents.Chip.Action">
        <item name="shapeAppearanceOverlay">@style/CustomShapeStyle</item>
    </style>

    <style name="CustomShapeStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item> <!-- Bentuk sudut -->
        <item name="cornerSize">25%</item> <!-- Membuat chip berbentuk elips -->
    </style>

</resources>