<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HerbMate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/greenD1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/greenD2</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/greenD3</item>
        <!-- Tertiary brand color. -->
        <item name="materialSearchBarStyle">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorOnPrimary">@color/white</item>
    </style>
    <color name="primaryColor">@color/greenD1</color>
    <color name="secondaryColor">@color/greenD2</color>
    <color name="tertiaryColor">@color/greenD3</color>
    <color name="blackAndWhiteColor">@color/white</color>
    <color name="whiteAndBlackColor">@color/black</color>

    <color name="searchBarColor">@color/white</color>

    <drawable name="logoBlackAndWhite">@drawable/logo_white</drawable>
</resources>